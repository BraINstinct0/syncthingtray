QtGui--TrayMenu {
    border: none;
    background-color: #000;
    qproperty-windowOpacity: 0.8;
}
QtGui--TrayWidget {
    color: #fff;
    background-color: rgba(255,0,0,50%);
    qproperty-windowOpacity: 0.8;
}
QtGui--TrayWidget * {
    color: #fff;
    background-color: transparent;
}

QtGui--TrayWidget QTreeView::branch {
    color: #fff;
}

QtGui--TrayWidget > QFrame {
    border-bottom: 1px solid #555;
    border-radius: 0px;
    padding: 2px;
}
